<script>
  function resizeIframe(iframe) {
    const interval = setInterval(() => {
      const doc = iframe.contentWindow.document;
      if (doc.body.scrollHeight > 100) { 
        iframe.style.height = doc.body.scrollHeight + "px";
        clearInterval(interval);
      }
    }, 100); 
  }
</script>



